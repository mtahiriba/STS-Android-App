<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65D8D3D3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".TestSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="120dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Text ID"
            android:textColor="#000000"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="70dp"
            android:text="Enter Test ID below to see the statistic"
            android:textAlignment="center"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="TEST ID"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FF5722"
            android:onClick="enterClick"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="ENTER"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="288dp"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="180dp"
        app:srcCompat="@drawable/orange_circle" />

</LinearLayout>